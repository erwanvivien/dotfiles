  "actions": [
    // Copy and paste are bound to Ctrl+Shift+C and Ctrl+Shift+V in your defaults.json.
    {
      "command": {
        "action": "copy",
        "singleLine": false
      },
      "keys": "ctrl+shift+c"
    },
    {
      "command": "paste",
      "keys": "ctrl+shift+v"
    },
    // Ctrl + shift + w is even better
    {
      "command": "closeTab",
      "keys": "ctrl+w"
    },
    {
      "command": "find",
      "keys": "ctrl+shift+f"
    },
    // Always on top toggle
    {
      "command": "toggleAlwaysOnTop",
      "keys": "ctrl+space"
    },
    // alt shift = or alt shift - to split (d works also)
    {
      "command": {
        "action": "splitPane",
        "split": "auto",
        "splitMode": "duplicate"
      },
      "keys": "alt+shift+d"
    },
